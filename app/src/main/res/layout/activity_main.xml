<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242B2E"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/imgSpeak"
        android:layout_width="70dp"
        android:layout_height="72dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_mic_24"
        app:tint="@color/white" />

    <Button
        android:id="@+id/btnON"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/green"
        android:text="Turn On"
        app:layout_constraintTop_toBottomOf="@+id/imgBulb"
        tools:layout_editor_absoluteX="80dp" />

    <Button
        android:id="@+id/btnOFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/red"
        android:text="Turn off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnON" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="348dp"
        android:layout_height="87dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="Smart Lighting"
        android:textColor="@color/white"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgBulb"
        android:layout_width="141dp"
        android:layout_height="166dp"
        android:layout_marginTop="36dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/bulb_off" />

</androidx.constraintlayout.widget.ConstraintLayout>